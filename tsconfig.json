{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "lib": ["DOM"],
    "target": "esnext",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/ts/typings", "./src/submodules/chat/src/ts/typings"]
  },
  "include": ["src/**/*", "*.js", "utils/**/*"],
  "exclude": ["node_modules", "build", "**/vite.config.ts"]
}
