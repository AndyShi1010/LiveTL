{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "lib": ["DOM"],
    "target": "ES6",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/ts/typings", "./src/submodules/chat/src/ts"]
  },
  "include": ["src/**/*", ".eslintrc.js", "*.js"],
  "exclude": ["node_modules", "build"]
}
