{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "outDir": "./build/",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "lib": ["DOM"],
    "target": "ES6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
